{
  "compilerOptions": {
    "outDir": "./lib/",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
